[env]
TERM = "xterm-256color"

[font]
size = {{ alacritty_font_size }}

[font.bold]
# JetBrains Mono would be better, but it has not the glyphs tmux needs
family = "SauceCodePro Nerd Font"
style = "Bold"

[font.bold_italic]
# JetBrains Mono would be better, but it has not the glyphs tmux needs
family = "SauceCodePro Nerd Font"
style = "Bold Italic"

[font.italic]
# JetBrains Mono would be better, but it has not the glyphs tmux needs
family = "SauceCodePro Nerd Font"
style = "Italic"

[font.normal]
# JetBrains Mono would be better, but it has not the glyphs tmux needs
family = "SauceCodePro Nerd Font"
style = "Regular"

[scrolling]
history = 100000

[window]
opacity = 0.8
option_as_alt = "None"
startup_mode = "Maximized"

[general]
import = [
    "~/.config/alacritty/{{ alacritty_theme }}.toml",
]
