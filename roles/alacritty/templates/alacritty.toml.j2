[env]
TERM = "xterm-256color"
{% if ansible_facts["os_family"] == 'Darwin' %}
LC_CTYPE = "en_US.UTF-8"
LANG = "en_US.UTF-8"
{% endif %}

[font]
size = {{ alacritty_font_size }}

[font.bold]
# JetBrains Mono would be better, but it has not the glyphs tmux needs
family = "SauceCodePro Nerd Font"
style = "Bold"

[font.bold_italic]
# JetBrains Mono would be better, but it has not the glyphs tmux needs
family = "SauceCodePro Nerd Font"
style = "Bold Italic"

[font.italic]
# JetBrains Mono would be better, but it has not the glyphs tmux needs
family = "SauceCodePro Nerd Font"
style = "Italic"

[font.normal]
# JetBrains Mono would be better, but it has not the glyphs tmux needs
family = "SauceCodePro Nerd Font"
style = "Regular"

[scrolling]
history = 100000

[window]
{% if ansible_facts["os_family"] == 'Darwin' %}
opacity = 1.0
{% else %}
opacity = 0.7
{% endif %}
option_as_alt = "None"
startup_mode = "Maximized"

[general]
import = [
    "~/.config/alacritty/{{ alacritty_theme }}.toml",
]
