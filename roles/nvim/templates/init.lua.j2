-- configure the lualine plugin for being used as a top statusline
require('lualine').setup {
    options = {
        globalstatus = true,
    },
    winbar = {
        lualine_a = {'mode'},
        lualine_b = {'branch', 'diff', 'diagnostics'},
        lualine_c = {'filename'},
        lualine_x = {'encoding', 'fileformat', 'filetype'},
        lualine_y = {'progress'},
        lualine_z = {'location'}
    },
    sections = {},
    inactive_sections = {},
}
vim.opt.laststatus = 0
vim.opt.cmdheight = 0
vim.opt.showmode = false
vim.opt.ruler = false

-- configure the theme which nvim uses
require("catppuccin").setup({
    flavour = "macchiato",                                  -- latte, frappe, macchiato, mocha
    transparent_background = true                           -- disables setting the background color and use the term instead
})

-- enable spell checking and set the correct locale
vim.opt.spell = true
vim.opt.spelllang = "en_us"

-- set the color theme but prepend it with 'silent!' to ignore errors when it's not yet installed
vim.cmd('silent! colorscheme catppuccin')
