# for_window [class=".*] border pixel 1
default_border none
	for_window [app_id="Alacritty"] border pixel 1

	# postfix all X11 apps with XWayland
	for_window [shell="xwayland"] title_format "%title [XWayland]"

############################################################
# the window rules defined for native wayland applications #
############################################################

{% for rule in sway_wayland_window_rules %}
# {{ rule.name }}
for_window [app_id="{{ rule.app_id }}"] {{ rule.flags | join(', ') }}
{% endfor %}
#for_window [app_id="firefox" title="^Picture-in-Picture$"] $popup

#################################################
# the window rules defined for X11 applications #
#################################################

{% for rule in sway_x11_window_rules %}
# {{ rule.name }}
for_window [{% if 'class' in rule %}class="{{ rule['class'] }}"{% elif 'instance' in rule %}instance="{{ rule['instance'] }}"{% endif %}] {{ rule.flags | join(', ') }}
{% endfor %}
# Necesse
for_window [title="^Necesse v\..*"] inhibit_idle focus, floating enabled, move to output $output-primary
# Path of Exile 2
# Civilization VII
# Battle.net Launcher
for_window [title="^Battle\.net$"] inhibit_idle focus, floating enable, max_render_time off, move window to output $output-primary, blur disabled, border pixel 0, move position center
for_window [title="^Battle\.net Login$"] inhibit_idle focus, floating enable, max_render_time off, move window to output $output-primary, blur disabled, border pixel 0, move position center
# World of Warcraft
for_window [title="^World of Warcraft$"] inhibit_idle focus, floating enable, max_render_time off, move window to output $output-primary, blur disabled
# Merge window for JetBrains IDEs
for_window [class="^jetbrains.*" title="^Merge Revisions.*"] floating enable, resize set 80ppt 80ppt, move position center
# Steam Friends List
for_window [class="steam" title="^Friends List$"] floating enabled, resize set 15ppt 80ppt, move position center

#############################################
# notification windows (based on role/type) #
#############################################
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="dialog"] floating enable
for_window [window_type="dialog"] floating enable

############################################
# Open/Save dialogs should be floating too #
############################################
for_window [title="(?:Open|Save) (?:File|Folder|As)"] floating enable, resize set width 1030 height 710


################################################
# start some applications after sway is loaded #
################################################
exec nextcloud
exec $HOME/.local/share/JetBrains/Toolbox/bin/jetbrains-toolbox

include /etc/sway/config.d/*
